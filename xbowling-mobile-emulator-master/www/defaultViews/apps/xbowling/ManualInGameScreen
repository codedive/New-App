            });
        },

        manualInGameScreen.joinLiveGameTap = function () {
            var viewModel = ko.dataFor(this);

            scn.popup.show("JoinGamePopup", {
                viewModel: {
                    bowlingGameId: viewModel.bowlingGameId(),
                    competitionType: "Live"
                },
                callback: function (competitionGame) {
                    if (competitionGame) {
                        viewModel.liveCompetitionId(competitionGame.liveBowlingCompetitionGroup.liveBowlingCompetition.id);
                        viewModel.waitingForLiveCompetitionApproval(true);
                        viewModel.liveCompetitionRejected(false);

                        manualInGameScreen.loadLiveCompetition(viewModel);
                    }
                },
                height: "auto"
            });
        },

        manualInGameScreen.createGameTap = function () {
            var viewModel = ko.dataFor(this);

            if (scn.hasSession()) {
                scn.popup.show("CreateGamePopup", {
                    callback: scn.views.manualInGameScreen.createGamePopupCallback,
                    viewModel: {
                        bowlingGameId: viewModel.bowlingGameId(),
                        competitionType: "Live",
                        isManualScoring: true
                    },
                    height: 280
            });
            }
        },

        manualInGameScreen.createGamePopupCallback = function (competitionGame) {
            if (competitionGame) {
                var viewModel = ko.dataFor(jQuery("#in-game-screen-wrapper").get(0));
                viewModel.liveCompetitionId(competitionGame.competition.id);
                viewModel.isCompetitionCreator(true);
                viewModel.liveCompetitionEntryFeeCredits(competitionGame.competition.entryFeeCredits);
                //manualInGameScreen.loadChallengers(viewModel);
            }
        },

        manualInGameScreen.getStandingPinArray = function (data) {
            if (!data)
                return 0;

            var latestSquareNumber = data.latestSquareNumber();
            return data['standingPins' + scn.padLeft(latestSquareNumber, 2)];
        },

        manualInGameScreen.startNewGame = function () {
            var viewModel = ko.dataFor(this.element);

            if (viewModel.loadingStartNewGame()) {
                return;
            }

            scn.showLoading();

            scn.ajax({
                url: scn.apiAddress + "user/current",
                type: "GET",
                data: {},
                dataType: "json",
                success: function (data) {
                    var user = data == null ? 0 : data.id;

                    if (user < 1) {
                        scn.hideLoading();
                        viewModel.loadingStartNewGame(false);
                        alert("An error occurred.  Please try again.");
                        return;
                    }

                    var model = {
                        id: viewModel.laneCheckoutId(),
                        user: { id: user }
                    };

                    scn.ajax({
                        url: scn.apiAddress + "manuallanecheckout",
                        type: "POST",
                        data: model,
                        dataType: "json",
                        success: function (data) {
                            scn.hideLoading();
                            viewModel.loadingStartNewGame(false);
                            scn.viewEngine.changeView("ManualInGameScreen?laneCheckout=" + data.id + "&bowlingGame=" + data.bowlingGame.id + "&venue=" + data.venue.id + "&venueName=" + data.venue.name);
                        },
                        error: function () {
                            scn.hideLoading();
                            viewModel.loadingStartNewGame(false);
                            alert("It looks like we weren't able to start a new game! Please try again later.", { title: "Uh oh!" });
                            scn.hideLoading();
                        }
                    });
                },
                error: function () {
                    viewModel.loadingStartNewGame(false);
                    scn.hideLoading();
                    alert("An error occurred.  Please try again.");
                }
            });
        },

        manualInGameScreen.showAvailableChallengePopup = function () {
            var viewModel = ko.dataFor(this.element);

            var containerElm = jQuery(this.element).parents("#in-game-screen-wrapper");
            showAvailableChallengePopup(viewModel, containerElm);
        },

        manualInGameScreen.showGameSummaryPopup = function () {
            var viewModel = ko.dataFor(this.element);

            scn.popup.show("GameSummary", {
                viewModel: {
                    bowlingGameId: viewModel.bowlingGameId(),
                    inGameScreenViewModel: viewModel,
                    isManualInput: true
                }
            });
        },

        showAvailableChallengePopup = function (viewModel, containerElm, hideCloseButton, callback) {
            scn.popup.show("EnterChallengePopup", {
                viewModel: {
                    bowlingGameId: viewModel.bowlingGameId(),
                    inGameScreenViewModel: viewModel,
                    isManualInput: true
                },
                callback: function () {
                    manualInGameScreen.updateChallenge(viewModel, true, containerElm);

                    if (callback && typeof (callback) === "function") {
                        callback.call(null);
                    }
                },
                hideCloseButton: hideCloseButton,
                height: "auto"
            });
        },

        _askedForLiveConfirmation = [],
        manualInGameScreen.onAfterLiveChallengerAdd = function (elm, index, added) {
            if (added.state() == "Pending") {
                if (_askedForLiveConfirmation.indexOf(added.scoredGame.bowlingGameId()) == -1) {
                    _askedForLiveConfirmation.push(added.scoredGame.bowlingGameId());

                    var viewModel = ko.dataFor(jQuery(elm).parents("#tab-4-scroller").get(0));
                    if (viewModel.isCompetitionCreator()) {
                        confirm(added.screenName() + " would like to join your game.  Is that OK?", {
                            title: "New Player",
                            buttonLabels: "Yes,No",
                            callback: function (r) {
                                var state;
                                if (r === NOTIFICATION_BUTTONS.OK) {
                                    state = "Entered";
                                } else {
                                    state = "Rejected";
                                }

                                scn.showLoading();

                                scn.ajax({
                                    url: scn.apiAddress + "bowlingcompetition/live/" + viewModel.liveCompetitionId() + "/game/" + added.scoredGame.bowlingGameId() + "/state",
                                    type: "POST",
                                    data: { state: state },
                                    success: function () {
                                        scn.hideLoading();
                                        added.state(state);
                                    },
                                    error: function () {
                                        scn.hideLoading();
                                        alert("An error occurred confirming that opponent.  Please try again later.");
                                    }
                                });
                            }
                        });
                    }
                }
            }
        },

        manualInGameScreen.getScoreDifferentialPosted = function (gameArray, game, elm, scoringMode) {
            var highestGameScore;
            elm = jQuery(elm);

            var propName = scoringMode == "Handicap" ? "handicapScore" : "finalScore";

            for (var i = 0; i < gameArray.length; i++) {
                var gameScore = gameArray[i][propName]();
                if (!highestGameScore) {
                    highestGameScore = gameScore;
                } else if (gameScore > highestGameScore) {
                    highestGameScore = gameScore;
                }
            }

            var value = game[propName]() - highestGameScore;
            if (value > 0) {
                value = "(+" + value + ")";
                elm.css("color", "#06fa11");
            } else if (value < 0) {
                value = "(" + value + ")";
                elm.css("color", "#FF0000");
            } else {
                value = "";
                elm.css("color", "#ffffff");
            }

            return value;
        },

        manualInGameScreen.getScoreDifferentialLive = function (gameArray, game, elm, scoringMode) {
            var highestGameScore;
            elm = jQuery(elm);

            var propName = scoringMode == "Handicap" ? "handicapScore" : "finalScore";

            for (var i = 0; i < gameArray.length; i++) {
                var gameScore = gameArray[i].scoredGame[propName]();
                if (!highestGameScore) {
                    highestGameScore = gameScore;
                } else if (gameScore > highestGameScore) {
                    highestGameScore = gameScore;
                }
            }

            var value = game[propName]() - highestGameScore;
            if (value > 0) {
                value = "(+" + value + ")";
                elm.css("color", "#06fa11");
            } else if (value < 0) {
                value = "(" + value + ")";
                elm.css("color", "#be1616");
            } else {
                value = "";
                elm.css("color", "#ffffff");
            }

            return value;
        },

        manualInGameScreen.postToTwitter = function () {
            var viewModel = ko.dataFor(this);
            if (viewModel.isGameOver()) {
                scn.gameplay.postScoresToTwitter(viewModel.bowlingGameId());
            }
        },

        manualInGameScreen.postToFacebook = function () {
            var viewModel = ko.dataFor(this);
            if (viewModel.isGameOver()) {
                scn.gameplay.postScoresToFacebook(viewModel.bowlingGameId());
            }
        },

        manualInGameScreen.vibCheck = function () {
            var elm = jQuery(this.element);
            var tab = elm.parents("#vib-tab:first");

            var tabViewModel = ko.dataFor(tab.get(0));
            var viewModel = ko.dataFor(elm.get(0));

            if (!viewModel.selected()) {
                tabViewModel.selectedVibList.push(viewModel);
                viewModel.selected(true);
            } else {
                var selectedList = tabViewModel.selectedVibList();
                for (var i = 0; i < selectedList.length; i++) {
                    if (selectedList[i].id() == viewModel.id()) {
                        selectedList[i].selected(false);
                        tabViewModel.selectedVibList.remove(selectedList[i]);
                    }
                }
            }
            /*
            if (elm.data("checked")) {
                jQuery(".checkbox", elm).removeClass("hidden");
                jQuery(".checkbox-checked", elm).addClass("hidden");
                elm.data("checked", false);
            } else {
                jQuery(".checkbox", elm).addClass("hidden");
                jQuery(".checkbox-checked", elm).removeClass("hidden");
                elm.data("checked", true);
            }
            */
        },

        manualInGameScreen.showVibPlayerCardPopup = function () {
            scn.popup.show("VibPlayerCardPopup", {
                additionalClass: "red-popup",
                closeButtonAdditionalClass: "close-btn-20-red",
                viewModel: ko.dataFor(this.element)
            });
        },

        manualInGameScreen.onVibTabShow = function () {
            var elm = jQuery(this);
            var viewModel = ko.dataFor(elm.get(0));

            var scroll = jQuery("#vib-scroll");
            var scrollDom = scroll.get(0);
            if (!scrollDom.iScroll) {
                var isc = new iScroll(scrollDom, {
                    snap: false,
                    momentum: false,
                    hScroll: false,
                    hScrollbar: false,
                    vScroll: true,
                    vScrollbar: false
                });

                scn.viewEngine.registerViewDestructor(function () {
                    if (isc && isc.iScroll) {
                        isc.iScroll.destroy();
                    }
                });
            } else {
                scrollDom.iScroll.refresh();
            }

            scn.ajax({
                url: scn.apiAddress + "bowlinggame/" + viewModel.bowlingGameId() + "/vib/posted/available",
                data: {},
                dataType: "json",
                success: function (data) {
                    ko.mapping.fromJS(data,
                        {
                            key: function (item) {
                                return ko.utils.unwrapObservable(item.id);
                            },
                            create: function (toCreate) {
                                var obs = ko.mapping.fromJS(toCreate.data);
                                obs.selected = ko.observable(false);
                                return obs;
                            }
                        },
                        viewModel.vibList);

                    viewModel.vibLoaded(true);

                    if (scrollDom.iScroll) {
                        scrollDom.iScroll.refresh();
                    }
                },
                error: function (jqXhr, status) {

                }
            });
        },

        manualInGameScreen.loadVibScores = function (viewModel, firstLoad) {
            if (!firstLoad && !viewModel.hasVib()) {
                return;
            }

            var scroll = jQuery("#vib-score-scroll");
            var scrollDom = scroll.get(0);
            if (!scrollDom.iScroll) {
                var isc = new iScroll(scrollDom, {
                    snap: false,
                    momentum: false,
                    hScroll: false,
                    hScrollbar: false,
                    vScroll: true,
                    vScrollbar: false
                });

                scn.viewEngine.registerViewDestructor(function () {
                    if (isc && isc.iScroll) {
                        isc.iScroll.destroy();
                    }
                });
            }

            scn.ajax({
                url: scn.apiAddress + "vib/game/" + viewModel.bowlingGameId() + "/view",
                method: "GET",
                dataType: "json",
                success: function (data) {
                    if (data.length == 0) {
                        viewModel.hasVib(false);
                    } else {
                        viewModel.hasVib(true);
                    }

                    ko.mapping.fromJS(data, {}, viewModel.vibChallengers);

                    if (scrollDom.iScroll) {
                        var innerScroll = scroll.children(":first");
                        var newHeight = 100 * data.length;
                        if (innerScroll.height() != newHeight) {
                            innerScroll.height(newHeight);
                            scrollDom.iScroll.refresh();
                        }
                    }
                },
                error: function (jqXhr, status) {
                    viewModel.hasVib(false);
                }
            });
        },

        manualInGameScreen.enterVibCompetitions = function () {
            var elm = jQuery(this);
            var viewModel = ko.dataFor(elm.get(0));

            var selectedVibIdList = [];
            var selectedVibList = viewModel.selectedVibList();

            if (selectedVibList.length == 0)
                return;

            for (var i = 0; i < selectedVibList.length; i++) {
                selectedVibIdList[i] = selectedVibList[i].id();
            }

            scn.payment.purchase(
                // format of VIB itunes/android item names: com.scn.tribaltech.xbowling.itemname_qtyX
                selectedVibList[0].vibEntryPackage.name(),// + "_qty" + selectedVibIdList.length,
                function (purchaseData) {
                    var postData;
                    var postUrl;

                    var data = {
                        bowlingGameId: viewModel.bowlingGameId,
                        vibPostedBowlingCompetitionIds: selectedVibIdList,
                        purchaseData: postData
                    };

                    if (purchaseData.type === scn.payment.PAYMENT_TYPE.IOS) {
                        if (!purchaseData.transactionIdentifier || !purchaseData.transactionReceipt || !purchaseData.productId) {
                            alert("There was an error connecting to the store.  Please try again later.");
                            return;
                        }

                        postUrl = "itunes";
                        data.productId = purchaseData.productId;
                        data.transactionId = purchaseData.transactionIdentifier;
                        data.receiptId = purchaseData.transactionReceipt;

                    } else if (purchaseData.type === scn.payment.PAYMENT_TYPE.ANDROID) {
                        if (!purchaseData.productId || !purchaseData.signedData || !purchaseData.signature) {
                            alert("There was an error connecting to the store.  Please try again later.");
                            return;
                        }

                        postUrl = "android";
                        data.productId = purchaseData.productId;
                        data.signedData = purchaseData.signedData;
                        data.signature = purchaseData.signature;
                    } else {
                        alert("We are very sorry, but an error occurred getting your purchase information.  Please contact XBowling support (support@xbowling.com)", { title: "Uh oh!" });
                        return;
                    }

                    data.vibEntryPackageId = selectedVibList[0].vibEntryPackage.id();

                    scn.ajax({
                        url: scn.apiAddress + "vib/enter/" + postUrl,
                        type: "POST",
                        data: data,
                        success: function (data) {
                            viewModel.hasVib(true);

                            // load it
                            manualInGameScreen.loadVibScores(viewModel, false);
                        },
                        error: function (jqXhr, status) {
                            alert("An error occurred entering the VIB contest. Please contact support@xbowling.com.", { title: "Uh oh!" });
                        }
                    });
                },
                function () {
                    alert("An error occurred entering the VIB contest. Please contact support@xbowling.com.", { title: "Uh oh!" });
                });
        }
    }(window.scn.views.manualInGameScreen = window.scn.views.manualInGameScreen || {}));


</script> 
